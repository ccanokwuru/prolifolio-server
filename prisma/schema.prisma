generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  email         String         @unique @db.VarChar(200)
  password      String         @db.VarChar(255)
  profile       Profile        @relation(fields: [profileId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  profileId     String         @unique @db.Uuid
  role          ROLE           @default(user)
  session       Session[]
  auth_recovery AuthRecovery[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model AuthRecovery {
  user      User     @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  userId    String   @db.Uuid
  token     String   @unique
  createdAt DateTime @default(now())
  expired   Boolean  @default(false)
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  token     String   @unique @db.VarChar(500)
  authToken String?  @unique @db.VarChar(500)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  userId    String   @db.Uuid
  expired   Boolean  @default(false)
}

model Profile {
  id               String         @id @default(uuid()) @db.Uuid
  first_name       String         @db.VarChar(200)
  last_name        String         @db.VarChar(200)
  other_name       String?        @db.VarChar(200)
  avatar           String?        @db.VarChar(500)
  display_name     String?        @unique @db.VarChar(200)
  interests        Skill[]
  contacts         Contact[]
  artist           Artist?
  favourites       Favourite[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  reviews          Review[]
  reactions        Reaction[]
  comments         Comment[]
  posts            Post[]
  jobs             Job[]
  orders           Order[]
  wishlist         Work[]
  messagesRecieved Message[]      @relation("Recieved")
  messagesSent     Message[]      @relation("Sent")
  notifications    Notification[]
  user             User?
}

model Contact {
  id        String   @id @default(uuid()) @db.Uuid
  type      CONTACT?
  phone     String   @unique @db.VarChar(15)
  email     String?  @db.VarChar(500)
  address   String
  city      String
  state     String
  country   String
  zipcode   String
  position  String?  @db.VarChar(100)
  user      Profile? @relation(fields: [ownerId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  ownerId   String?  @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Artist {
  id         String      @id @default(uuid()) @db.Uuid
  profile    Profile?    @relation(fields: [profileId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  works      Work[]
  skills     Skill[]
  jobs       Job[]
  studio     Studio?
  favourites Favourite[]
  profileId  String?     @unique @db.Uuid
  reactions  Reaction[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  deletedAt  DateTime?
}

model Category {
  id           String     @id @default(uuid()) @db.Uuid
  name         String     @unique @db.VarChar(100)
  catergories  Category[] @relation("CategoryToCategory")
  skills       Skill[]
  works        Work[]
  jobs         Job[]
  description  String?
  p_category   Category?  @relation("CategoryToCategory", fields: [p_categoryId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  p_categoryId String?    @db.Uuid
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Skill {
  id          String    @id @default(uuid()) @db.Uuid
  name        String    @unique @db.VarChar(100)
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  categoryId  String?   @db.Uuid
  description String?
  users       Profile[]
  artists     Artist[]
  works       Work[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Work {
  id          String      @id @default(uuid()) @db.Uuid
  title       String      @db.VarChar(200)
  category    Category    @relation(fields: [categoryId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  categoryId  String      @db.Uuid
  description String?
  artist      Artist      @relation(fields: [artistId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  artistId    String      @db.Uuid
  favourites  Favourite[]
  studio      Studio?     @relation(fields: [studioId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  studioId    String?     @db.Uuid
  reviews     Review[]
  orders      Order[]
  price       Decimal?    @db.Money
  currency    String?     @default("NGN") @db.VarChar(3)
  sellAs      SELLAS[]    @default([buy_now])
  reactions   Reaction[]
  skills      Skill[]
  files       Json?
  wishlists   Profile[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Review {
  id        String   @id @default(uuid()) @db.Uuid
  user      Profile  @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  userId    String   @db.Uuid
  comment   String?
  rating    Decimal
  work      Work     @relation(fields: [workId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  workId    String   @db.Uuid
  parent    Review?  @relation(fields: [parentId], references: [id], name: "ReplyToComment", onDelete: SetNull, onUpdate: Cascade)
  parentId  String?  @db.Uuid
  replies   Review[] @relation("ReplyToComment")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reviewId  String?  @db.Uuid
}

model Order {
  id          String   @id @default(uuid()) @db.Uuid
  description String?
  user        Profile  @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  status      String   @default("pending")
  works       Work[]
  price       Decimal?
  currency    String?  @db.VarChar(3)
  userId      String   @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Favourite {
  id        String   @id @default(uuid()) @db.Uuid
  work      Work?    @relation(fields: [workId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  workId    String?  @db.Uuid
  post      Post?    @relation(fields: [postId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  postId    String?  @db.Uuid
  user      Profile  @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  userId    String   @db.Uuid
  studio    Studio?  @relation(fields: [studioId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  studioId  String?  @db.Uuid
  artist    Artist?  @relation(fields: [artistId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  artistId  String?  @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reaction {
  id        String   @id @default(uuid()) @db.Uuid
  type      String   @unique @db.VarChar(15)
  user      Profile  @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  userId    String   @db.Uuid
  artist    Artist?  @relation(fields: [artistId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  artistId  String?  @db.Uuid
  post      Post?    @relation(fields: [postId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  postId    String?  @db.Uuid
  work      Work?    @relation(fields: [workId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  workId    String?  @db.Uuid
  studio    Studio?  @relation(fields: [studioId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  studioId  String?  @db.Uuid
  message   Message? @relation(fields: [messageId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  messageId String?  @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Studio {
  id          String      @id @default(uuid()) @db.Uuid
  name        String      @unique @db.VarChar(100)
  description String?
  artist      Artist      @relation(fields: [artistId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  artistId    String      @unique @db.Uuid
  works       Work[]
  favourites  Favourite[]
  reactions   Reaction[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Job {
  id          String   @id @default(uuid()) @db.Uuid
  title       String   @db.VarChar(200)
  category    Category @relation(fields: [categoryId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  categoryId  String   @db.Uuid
  description String?
  owner       Profile  @relation(fields: [ownerId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  applicants  Artist[]
  ownerId     String   @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String       @id @default(uuid()) @db.Uuid
  message   String
  type      NOTIFICATION @default(single)
  users     Profile[]
  readBy    String[]     @db.Uuid
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Message {
  id          String     @id @default(uuid()) @db.Uuid
  to          Profile    @relation("Recieved", fields: [toId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  toId        String     @db.Uuid
  from        Profile?   @relation("Sent", fields: [fromId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  fromId      String?    @db.Uuid
  message     String
  replies     Message[]  @relation("ReplyToMessage")
  p_message   Message?   @relation("ReplyToMessage", fields: [p_messageId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  p_messageId String?    @db.Uuid
  reactions   Reaction[]
  read        Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Post {
  id         String      @id @default(uuid()) @db.Uuid
  slug       String      @unique @db.VarChar(200)
  title      String      @db.VarChar(200)
  content    String
  thumbnail  String?     @db.VarChar(500)
  author     Profile     @relation(fields: [authorId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  authorId   String      @db.Uuid
  comments   Comment[]
  favourites Favourite[]
  reactions  Reaction[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  deletedAt  DateTime?
}

model Comment {
  id        String    @id @default(uuid()) @db.Uuid
  post      Post      @relation(fields: [postId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  postId    String    @db.Uuid
  parent    Comment?  @relation(fields: [parentId], references: [id], name: "CommentToComment", onDelete: SetNull, onUpdate: Cascade)
  parentId  String?   @db.Uuid
  message   String
  user      Profile   @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  userId    String    @db.Uuid
  comments  Comment[] @relation("CommentToComment")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum ROLE {
  user
  artist
  admin
}

enum NOTIFICATION {
  single
  multiple
  broadcast
}

enum CONTACT {
  default
  residential
  office
}

enum SELLAS {
  bidding
  best_offer
  buy_now
}
